<style>
  .site-footer {
    background: var(--primary-dark);
    color: var(--text-inverse);
    padding: 4rem 0 2rem;
    margin-top: 4rem;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }
  
  /* Brand */
  .footer-brand {
    max-width: 280px;
  }
  
  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text-inverse);
    margin-bottom: 1rem;
  }
  
  .footer-logo:hover {
    color: var(--accent);
  }
  
  .footer-logo .logo-icon {
    font-size: 1.5rem;
  }
  
  .footer-logo .logo-text {
    color: var(--text-inverse);
  }
  
  .footer-tagline {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
    line-height: 1.6;
    margin: 0;
  }
  
  /* Links */
  .footer-links h4,
  .footer-contact h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--accent);
  }
  
  .footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.5rem;
  }
  
  .footer-links a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color var(--transition);
  }
  
  .footer-links a:hover {
    color: var(--accent);
  }
  
  /* Contact */
  .wechat-card {
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius);
    padding: 1rem;
  }
  
  .wechat-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .wechat-icon {
    font-size: 2rem;
  }
  
  .wechat-label {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }
  
  .wechat-name {
    font-weight: 600;
    color: var(--text-inverse);
    margin: 0;
  }
  
  /* Bottom */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .copyright,
  .icp {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
  }
  
  .icp a {
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
  }
  
  .icp a:hover {
    color: var(--accent);
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  @media (max-width: 768px) {
    .site-footer {
      padding: 3rem 0 1.5rem;
    }
    
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .footer-brand {
      max-width: 100%;
    }
    
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
