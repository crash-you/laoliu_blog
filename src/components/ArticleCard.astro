---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  heroImage?: ImageMetadata;
  category: string;
  tags?: string[];
  href: string;
  type?: 'article' | 'project';
  difficulty?: string;
  estimatedIncome?: string;
}

import FormattedDate from './FormattedDate.astro';
import { ARTICLE_CATEGORIES, PROJECT_CATEGORIES, DIFFICULTY_LEVELS } from '../consts';

const { 
  title, 
  description, 
  pubDate, 
  heroImage, 
  category, 
  tags = [], 
  href, 
  type = 'article',
  difficulty,
  estimatedIncome 
} = Astro.props;

// æŸ¥æ‰¾åˆ†ç±»ä¿¡æ¯
const allCategories = [...ARTICLE_CATEGORIES, ...PROJECT_CATEGORIES];
const categoryInfo = allCategories.find(c => c.slug === category) || { name: category };
const difficultyInfo = DIFFICULTY_LEVELS.find(d => d.slug === difficulty);
---

<article class="article-card">
  <a href={href} class="card-link">
    {heroImage && (
      <div class="card-image">
        <img src={heroImage.src} alt={title} loading="lazy" />
      </div>
    )}
    
    <div class="card-body">
      <div class="card-meta">
        <span class="category">{categoryInfo.name}</span>
        {difficultyInfo && (
          <span class="difficulty" style={`--difficulty-color: ${difficultyInfo.color}`}>
            {difficultyInfo.name}
          </span>
        )}
        <span class="date">
          <FormattedDate date={pubDate} />
        </span>
      </div>
      
      <h3 class="card-title">{title}</h3>
      
      <p class="card-description">{description}</p>
      
      {estimatedIncome && (
        <div class="income-tag">
          ðŸ’° é¢„ä¼°æ”¶å…¥ï¼š{estimatedIncome}
        </div>
      )}
      
      {tags.length > 0 && (
        <div class="card-tags">
          {tags.slice(0, 3).map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .article-card {
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: all var(--transition);
  }
  
  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .card-image {
    aspect-ratio: 16/9;
    overflow: hidden;
  }
  
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }
  
  .article-card:hover .card-image img {
    transform: scale(1.05);
  }
  
  .card-body {
    padding: 1.5rem;
  }
  
  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    font-size: 0.813rem;
  }
  
  .category {
    padding: 0.25rem 0.5rem;
    background: var(--primary);
    color: var(--text-inverse);
    border-radius: var(--radius-sm);
    font-weight: 500;
  }
  
  .difficulty {
    padding: 0.25rem 0.5rem;
    background: var(--difficulty-color);
    color: white;
    border-radius: var(--radius-sm);
    font-weight: 500;
  }
  
  .date {
    color: var(--text-muted);
  }
  
  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .article-card:hover .card-title {
    color: var(--primary);
  }
  
  .card-description {
    font-size: 0.938rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0 0 1rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .income-tag {
    display: inline-block;
    padding: 0.5rem 0.75rem;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
    color: var(--primary-dark);
    border-radius: var(--radius);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
  }
</style>
