<style>
  .stories-header {
    background: linear-gradient(135deg, #38a169 0%, #48bb78 100%);
    color: white;
    padding: 3rem 0;
    text-align: center;
  }
  
  .stories-header h1 {
    margin: 0 0 0.5rem 0;
    color: white;
  }
  
  .stories-header p {
    margin: 0;
    opacity: 0.9;
  }
  
  .page-content {
    padding: 3rem 0;
  }
  
  .content-layout {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 3rem;
  }
  
  /* Sidebar */
  .sidebar {
    position: sticky;
    top: calc(var(--header-height) + 2rem);
    align-self: start;
  }
  
  .sidebar-section {
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }
  
  .sidebar-section h3 {
    font-size: 1rem;
    margin: 0 0 1rem 0;
  }
  
  .category-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .category-list li {
    margin-bottom: 0.25rem;
  }
  
  .category-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0.75rem;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: var(--radius);
    transition: all var(--transition);
  }
  
  .category-link:hover,
  .category-link.active {
    background: var(--bg-tertiary);
    color: var(--primary);
  }
  
  .category-link .count {
    font-size: 0.75rem;
    background: var(--bg-tertiary);
    padding: 0.125rem 0.5rem;
    border-radius: var(--radius-full);
    color: var(--text-muted);
  }
  
  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .cta-section {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
    color: white;
  }
  
  .cta-section h3 {
    color: white;
  }
  
  .cta-section p {
    color: rgba(255,255,255,0.9);
    margin: 0.5rem 0;
    font-size: 0.875rem;
  }
  
  /* Story Cards */
  .stories-grid {
    display: grid;
    gap: 1.5rem;
  }
  
  .story-card {
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: all var(--transition);
  }
  
  .story-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .story-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .story-body {
    padding: 1.5rem;
  }
  
  .story-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }
  
  .story-meta .category {
    padding: 0.25rem 0.5rem;
    background: #38a169;
    color: white;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .story-meta .income {
    padding: 0.25rem 0.5rem;
    background: var(--accent);
    color: var(--primary-dark);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
  }
  
  .story-title {
    font-size: 1.25rem;
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
  }
  
  .story-card:hover .story-title {
    color: #38a169;
  }
  
  .story-description {
    font-size: 0.938rem;
    color: var(--text-secondary);
    margin: 0 0 1rem 0;
  }
  
  .story-footer {
    display: flex;
    gap: 1rem;
    font-size: 0.813rem;
    color: var(--text-muted);
  }
  
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .content-layout {
      grid-template-columns: 1fr;
    }
    
    .sidebar {
      position: static;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
    
    .sidebar-section {
      margin-bottom: 0;
    }
  }
  
  @media (max-width: 768px) {
    .stories-header {
      padding: 2rem 0;
    }
    
    .sidebar {
      grid-template-columns: 1fr;
    }
  }
</style>
